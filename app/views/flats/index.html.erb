<div class="container">
  <div class="row">
    <div class="col-lg-6 mb-2">
      <div class="card sticky-top">
        <div data-controller="geolocation">
          <button data-action="geolocation#search">search near me</button>
          <select data-geolocation-target="distance" name="distance" id="">
            <option value="0.1">10km</option>
            <option value="0.2">20km</option>
            <option value="0.5" selected="selected">50km</option>
            <option value="1">100km</option>
          </select>
        </div>
        <div class="card-body">
          <img class="card-img-top" src="https://savageuniversal.com/wp-content/uploads/2017/02/1-vintage-world-map-printed-vinyl-backdrop.jpg" alt="">              </div>
      </div>
    </div>
    <div class="col-lg-6 mb-4">
      <div class="row">
        <% @flats.each do |flat|%>
          <div class="col-12">
            <div class="card rounded-4">
              <img class="img-thumbnail rounded-4  mb-4" src="<%= flat.image_url %>?<%= flat.id %>" alt="">
              <div class="card-body ">
                <p class="card-title"><%= flat.title %></p>
                <p class="card-text">
                  <%= flat.description %>
                </p>
                <a href="/flats/<%= flat.id %>" class="btn btn-success btn-sm text-white fw-normal rounded-4 float-center ">
                  Book now
                </a>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
