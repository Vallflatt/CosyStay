<div class="text-center fw-bold fs-1" style="padding-top: 40px">
  <p>MY BOOKINGS</p>
</div>
<div class="bg-light" style="padding-bottom: 30px">
  <div class="text-center fw-bold fs-4" style="padding: 20px">
    <% if @pending_bookings.count.positive? %>
      <p>Pending Bookings</p>
    <% else %>
      <p>No more pending Bookings</p>
    <% end %>
  </div>
  <div>
    <div class="d-flex justify-content-center" style="padding-buttom: 20px">
      <% @pending_bookings.each do |booking|%>
        <div class="col-2" style="margin-bottom: 6px">
          <div class="card rounded-4 my-2 h-100">
            <img class="img-thumbnail rounded-4" src="<%= booking.flat.image_url %>?<%= booking.flat.id %>" alt="">
            <div class="card-body d-flex flex-column justify-content-between">
              <div>
                <p class="card-title fw-bold"><%= booking.flat.title %></p>
                <p><small class="card-text"><%= booking.user.email %></small></p>
                <p><small class="card-text"><%= booking.start_date %> - <%= booking.end_date %></small></p>
              </div>
              <div class="d-grid gap-2 justify-content-center" style="padding-bottom: 1px">
                <%= button_to "accept", accept_booking_path(booking), class: "btn btn-outline-success btn-lg rounded-4" %>
                <%= button_to "decline", booking_path(booking), method: :delete, class: "btn btn-outline-warning btn-lg rounded-4" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="text-center fw-bold fs-4" style="padding: 20px">
  <p>Approved Bookings</p>
</div>
<div>
  <div class="d-flex justify-content-center" style="padding: 10px">
    <% @approved_bookings.each do |booking|%>
      <div class="col-2" style="margin: 16px">
        <div class="card rounded-4 my-2 h-100">
          <img class="img-thumbnail rounded-4" src="<%= booking.flat.image_url %>?<%= booking.flat.id %>" alt="">
          <div class="card-body d-flex flex-column justify-content-between">
            <div>
              <p class="card-title fw-bold"><%= booking.flat.title %></p>
              <p><small class="card-text"><%= booking.user.email %></small></p>
              <p><small class="card-text"><%= booking.start_date %> - <%= booking.end_date %></small></p>
            </div>
            <div class="d-flex justify-content-center" style="padding-bottom: 10px">
              <div style="padding: 10px"><a class="btn btn-outline-secondary btn-lg disabled rounded-4" href="#">Accepted</a></div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
