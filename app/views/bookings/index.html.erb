<div class="text-center fw-bold fs-1" style="padding-top: 60px">
  <p>MY BOOKINGS</p>
</div>
<div class="text-center fw-bold fs-4" style="padding: 60px">
  <p>You have a new book reservation. Would you like to:</p>
</div>
<h2>pending bookings</h2>
<div>
  <div>
    <% @pending_bookings.each do |booking|%>
      <div class="col-6" style="margin-bottom: 16px">
        <div class="card rounded-4 my-2 h-100">
          <img class="img-thumbnail rounded-4" src="<%= booking.flat %>?<%= booking.flat.id %>" alt="">
          <div class="card-body d-flex flex-column justify-content-between">
            <div>
              <p class="card-title fw-bold"><%= booking.flat.title %></p>
              <p class="card-text"><%= booking.flat.description %></p>
            </div>
            <a href="<%= flat_path booking.flat %>" class="btn btn-success btn-sm text-white fw-normal rounded-4 float-center fw-bold ">
              Book now
            </a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<h2>approved bookings</h2>
<div>
  <div>
    <% @approved_bookings.each do |booking|%>
      <div class="col-6" style="margin-bottom: 16px">
        <div class="card rounded-4 my-2 h-100">
          <img class="img-thumbnail rounded-4" src="<%= booking.flat %>?<%= booking.flat.id %>" alt="">
          <div class="card-body d-flex flex-column justify-content-between">
            <div>
              <p class="card-title fw-bold"><%= booking.flat.title %></p>
              <p class="card-text"><%= booking.flat.description %></p>
            </div>
            <a href="<%= flat_path booking.flat %>" class="btn btn-success btn-sm text-white fw-normal rounded-4 float-center fw-bold ">
              Book now
            </a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="d-flex justify-content-center" style="padding-bottom: 200px">
  <div style="padding: 40px"><a class="btn btn-success text-white btn-lg rounded-4" href="#">Accept</a></div>
  <div style="padding: 40px"><a class="btn btn-warning text-white btn-lg rounded-4" href="#">Decline</a></div>
</div>
